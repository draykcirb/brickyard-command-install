{
  "name": "brickyard-command-install",
  "version": "0.0.2",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint": "eslint *.js",
    "test": "mocha test",
    "test-cov": "istanbul cover mocha -- -i --reporter dot --check-leaks test"
  },
  "keywords": [
    "install",
    "brickyard",
    "command"
  ],
  "author": "e-cloud",
  "license": "ISC",
  "dependencies": {
    "bluebird": "^3.3.4",
    "bower": "^1.7.0",
    "lodash": "^4.6.1",
    "log4js": "^0.6.33",
    "npm": "~3.10.1",
    "semver": "^5.1.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "dev-null": "^0.1.1",
    "conventional-changelog": "^1.1.0",
    "eslint": "^3.0.0",
    "eslint-config-airbnb-base": "^4.0.0",
    "eslint-plugin-import": "^1.5.0",
    "ghooks": "^1.2.1",
    "istanbul": "^0.4.2",
    "mocha": "^2.4.5",
    "validate-commit-msg": "^2.6.1"
  },
  "peerDependencies": {
    "brickyard3": "~1.0.0"
  },
  "config": {
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "example",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 72,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "subject does not match subject pattern!",
      "helpMessage": ""
    },
    "ghooks": {
      "//": {
        "pre-commit": "check code style",
        "post-checkout": "npm install"
      },
      "commit-msg": "validate-commit-msg",
      "post-rewrite": "npm install",
      "post-merge": "npm install"
    }
  }
}
